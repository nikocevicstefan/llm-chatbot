# Server Configuration
PORT=3000
NGROK_STATIC_DOMAIN=demo.ngrok-free.app
NODE_ENV=development
LOG_LEVEL=info

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=llm_chatbot_dev
DB_USER=postgres
DB_PASSWORD=password
DB_NAME_TEST=llm_chatbot_test

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Platform Bot Tokens
DISCORD_TOKEN=your_discord_bot_token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# AI Service Configuration
# Choose ONE primary provider:

# Option 1: Official OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo

# Option 2: Self-hosted OpenAI-compatible API (like Ollama, vLLM, etc.)
# SELFHOSTED_API_KEY=your-api-key-or-dummy-if-none-required
# SELFHOSTED_BASE_URL=http://localhost:11434/v1
# SELFHOSTED_MODEL=llama-3-8b-instruct

# Optional Fallback Providers:

# Fallback to OpenAI (if primary fails)
# FALLBACK_OPENAI_API_KEY=sk-your-fallback-openai-api-key
# FALLBACK_OPENAI_MODEL=gpt-3.5-turbo

# Fallback to Self-hosted (if primary fails)
# FALLBACK_SELFHOSTED_API_KEY=your-fallback-api-key
# FALLBACK_SELFHOSTED_BASE_URL=http://backup-server:11434/v1
# FALLBACK_SELFHOSTED_MODEL=llama-3-8b-instruct

# Legacy (will be removed in future versions)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Security
JWT_SECRET=your-jwt-secret-key-here
WEBHOOK_SECRET=your-webhook-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100